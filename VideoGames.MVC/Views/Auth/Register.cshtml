@using VideoGames.MVC.ComplexTypes
@model RegisterModel
<div class="container">

    <form asp-action="Register" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="form-label" asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" />
        </div>
        <div>
            <label class="form-label" asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
        </div>
        <div>
            <label class="form-label" asp-for="Address"></label>
            <input class="form-control" asp-for="Address" />
        </div>
        <div>
            <label class="form-label" asp-for="City"></label>
            <input class="form-control" asp-for="City" />
        </div>
        <div>
            <label asp-for="Gender"></label>
            <select class="form-control" asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()">
                <option value="">Cinsiyet Seçin</option>
            </select>
        </div>
        <div>
            <label asp-for="DateOfBirth"></label>
            <input class="form-control" asp-for="DateOfBirth" type="date" />
        </div>
        <div>
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
        <div>
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" type="password" />
        </div>
        <div>
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" type="password" />
        </div>
        <button class="btn btn-primary mt-3" type="submit">Kaydol</button>
    </form>
</div>
