@model VideoGames.MVC.Models.VideoGameCDkeyModel

@{
    ViewData["Title"] = "CD Key Ekle";
    var videoGameId = ViewBag.VideoGameId;
}

<h2>CD Key Ekle</h2>

<form asp-action="Add" asp-controller="CDKey" asp-area="Admin" method="post">
    <input type="hidden" asp-for="VideoGameId" value="@videoGameId" />

    <div class="form-group">
        <label for="CDkey">CD Key</label>
        <input asp-for="CDkey" class="form-control" placeholder="Örn: XXXXX-XXXXX-XXXXX-XXXXX" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
    <a asp-area="Admin" asp-controller="CDKey" asp-action="Index" asp-route-videoGameId="@videoGameId" class="btn btn-secondary mt-2">Geri Dön</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
