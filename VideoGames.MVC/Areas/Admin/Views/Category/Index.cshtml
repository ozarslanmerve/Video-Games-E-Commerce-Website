@using VideoGames.MVC.Models
@model IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Kategori Listesi";
}
<h2 class="mb-3">🎮 Kategori Listesi</h2>

<div class="text-end mb-3">
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus"></i> Yeni Kategori Ekle
    </a>
</div>

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                
                <td>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Güncelle</a>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Sil</a>                   
                </td>


            </tr>
        }
    </tbody>
</table>
